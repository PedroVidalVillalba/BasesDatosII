<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="7.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.menu.MenuController">
    <MenuBar fx:id="menuBar" layoutY="1.0" prefHeight="27.0" prefWidth="600.0" style="-fx-background-color: ivory; -fx-border-style: none none solid none;">
        <menus>
            <Menu>
                <graphic>
                    <Label onMouseClicked="#switchToPrincipal" text="Gallaecia">
                  <font>
                     <Font name="DejaVu Serif Condensed Bold" size="13.0" />
                  </font></Label>
                </graphic>
            </Menu>
            <Menu mnemonicParsing="false" text="Ocio">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#switchToRide" text="Atracciones" />
                    <MenuItem mnemonicParsing="false" onAction="#switchToRestaurant" text="Restaurantes" />
                    <MenuItem mnemonicParsing="false" onAction="#switchToShow" text="Espectaculos" />
                </items>
            </Menu>
            <Menu>
                <graphic>
                    <Label onMouseClicked="#switchToRating" prefHeight="16.0" text="Valóranos" />
                </graphic>
            </Menu>
            <Menu>
                <graphic>
                    <Label onMouseClicked="#switchToChat" text="ChatGPT" />
                </graphic>
            </Menu>

            <Menu>
                <graphic>
                    <Label text="                                    " />
                </graphic>
            </Menu>

            <Menu fx:id="menuIniciarSesion">
                <graphic>
                    <Label onMouseClicked="#switchToLogin" style="-fx-border-style: solid solid solid solid;" styleClass="menu-item" text="Iniciar sesión" textOverrun="CLIP">
                    </Label>
                </graphic>

            </Menu>
        </menus>
    </MenuBar>
    <stylesheets>
        <URL value="@menu.css" /> <!-- Ruta al archivo CSS -->
    </stylesheets>
</AnchorPane>
